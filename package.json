{
  "name": "react-peppermint",
  "version": "1.1.4",
  "description": "Fresh state management for React ðŸŒ¿",
  "keywords": [
    "react",
    "state",
    "state management",
    "typescript",
    "view model",
    "mvvm",
    "mvc",
    "di",
    "dependency injection"
  ],
  "license": "MIT",
  "author": "Alon Bar",
  "homepage": "https://github.com/alonrbar/react-peppermint",
  "repository": {
    "type": "git",
    "url": "https://github.com/alonrbar/react-peppermint.git"
  },
  "bugs": {
    "url": "https://github.com/alonrbar/react-peppermint/issues"
  },
  "type": "module",
  "main": "dist/cjs/react-peppermint.cjs",
  "module": "dist/es/react-peppermint.mjs",
  "typings": "dist/types/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/react-peppermint.cjs"
    },
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/es/react-peppermint.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf .tmp dist test-reports",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"./{src,test}/**/!(*.d).ts\"",
    "test": "jest --verbose --passWithNoTests",
    "quality": "yarn typecheck && yarn lint && yarn test",
    "build-src": "rollup -c",
    "build-types": "tsc -p tsconfig.types.json --emitDeclarationOnly",
    "build": "yarn build-types && yarn build-src",
    "release": "yarn clean && yarn quality && yarn build"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/plugin-proposal-decorators": "7.24.7",
    "@babel/plugin-transform-modules-commonjs": "7.24.8",
    "@babel/preset-env": "7.25.3",
    "@babel/preset-react": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@eslint/js": "9.8.0",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@stylistic/eslint-plugin": "2.6.1",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.0.0",
    "@types/babel__preset-env": "^7",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@types/node": "22.0.3",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "babel-jest": "29.7.0",
    "eslint": "9.8.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-html-reporters": "3.1.7",
    "jest-junit": "16.0.0",
    "react-dom": "18.3.1",
    "rimraf": "6.0.1",
    "rollup": "4.19.2",
    "typescript": "5.5.4",
    "typescript-eslint": "8.0.0"
  },
  "packageManager": "yarn@4.3.1"
}
